<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="us.arrived.arrived.LegalHelp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="100dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/firstLegalHelpQuestion"
                style="@style/answer_question_view"
                android:text="@string/legalHelpQuestion1"
                />
            <TextView
                android:id="@+id/firstLegalHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/firstLegalHelpQuestion"
                android:text="@string/legalHelpAnswer1"
                />

            <Button
                android:id="@+id/secondLegalHelpQuestion"
                style="@style/answer_question_view"
                android:layout_below="@id/firstLegalHelpAnswer"
                android:text="@string/legalHelpQuestion2"
                />
            <TextView
                android:id="@+id/secondLegalHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/secondLegalHelpQuestion"
                android:text="@string/legalHelpAnswer2"
                />

            <Button
                android:id="@+id/thirdLegalHelpQuestion"
                style="@style/answer_question_view"
                android:layout_below="@id/secondLegalHelpAnswer"
                android:text="@string/legalHelpQuestion3"
                />
            <TextView
                android:id="@+id/thirdLegalHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/thirdLegalHelpQuestion"
                android:text="@string/legalHelpAnswer3"
                />

            <Button
                android:id="@+id/fourthLegalHelpQuestion"
                style="@style/answer_question_view"
                android:layout_below="@id/thirdLegalHelpAnswer"
                android:text="@string/legalHelpQuestion4"
                />
            <TextView
                android:id="@+id/fourthLegalHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/fourthLegalHelpQuestion"
                android:text="@string/legalHelpAnswer4"
                />

            <Button
                android:id="@+id/fifthLegalHelpQuestion"
                style="@style/answer_question_view"
                android:layout_below="@id/fourthLegalHelpAnswer"
                android:text="@string/legalHelpQuestion5"
                />
            <TextView
                android:id="@+id/fifthLegalHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/fifthLegalHelpQuestion"
                android:text="@string/legalHelpAnswer5"
                />



        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/facebook_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/black"
            android:drawableLeft="@mipmap/fb_logo"
            android:drawableStart="@mipmap/fb_logo"
            />

        <!-- TO DO: Figure out how to display the copyright notice. Not a huge deal.
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/copyright_notice"
                        android:text="@string/copyright"
                        android:textSize="8sp"
                        android:textColor="#FFFFFF"
                        android:clickable="false"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/arrived_button"
                        /> -->

        <Button
            android:id="@+id/arrived_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/black"
            android:drawableLeft="@mipmap/arrived_footer_logo"
            android:drawableStart="@mipmap/arrived_footer_logo"
            />


        <Button
            android:id="@+id/twitter_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/black"
            android:drawableLeft="@mipmap/twitter_logo"
            android:drawableStart="@mipmap/twitter_logo"
            />
    </RelativeLayout>
</RelativeLayout>