<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="us.arrived.arrived.DeportationHelp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="100dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/firstDeportationHelpQuestion"
                style="@style/answer_question_view"
                android:text="@string/deportationHelpQuestion1"
                />
            <TextView
                android:id="@+id/firstDeportationHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/firstDeportationHelpQuestion"
                android:text="@string/deportationHelpAnswer1"
                />

            <Button
                android:id="@+id/secondDeportationHelpQuestion"
                style="@style/answer_question_view"
                android:layout_below="@id/firstDeportationHelpAnswer"
                android:text="@string/deportationHelpQuestion2"
                />
            <TextView
                android:id="@+id/secondDeportationHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/secondDeportationHelpQuestion"
                android:text="@string/deportationHelpAnswer2"
                />

            <Button
                android:id="@+id/thirdDeportationHelpQuestion"
                style="@style/answer_question_view"
                android:layout_below="@id/secondDeportationHelpAnswer"
                android:text="@string/deportationHelpQuestion3"
                />
            <TextView
                android:id="@+id/thirdDeportationHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/thirdDeportationHelpQuestion"
                android:text="@string/deportationHelpAnswer3"
                />

            <Button
                android:id="@+id/fourthDeportationHelpQuestion"
                style="@style/answer_question_view"
                android:layout_below="@id/thirdDeportationHelpAnswer"
                android:text="@string/deportationHelpQuestion4"
                />
            <TextView
                android:id="@+id/fourthDeportationHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/fourthDeportationHelpQuestion"
                android:text="@string/deportationHelpAnswer4"
                />

            <Button
                android:id="@+id/fifthDeportationHelpQuestion"
                style="@style/answer_question_view"
                android:layout_below="@id/fourthDeportationHelpAnswer"
                android:text="@string/deportationHelpQuestion5"
                />
            <TextView
                android:id="@+id/fifthDeportationHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/fifthDeportationHelpQuestion"
                android:text="@string/deportationHelpAnswer5"
                />

            <Button
                android:id="@+id/sixthDeportationHelpQuestion"
                style="@style/answer_question_view"
                android:layout_below="@id/fifthDeportationHelpAnswer"
                android:text="@string/deportationHelpQuestion6"
                />
            <TextView
                android:id="@+id/sixthDeportationHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/sixthDeportationHelpQuestion"
                android:text="@string/deportationHelpAnswer6"
                />

            <Button
                android:id="@+id/seventhDeportationHelpQuestion"
                style="@style/answer_question_view"
                android:layout_below="@id/sixthDeportationHelpAnswer"
                android:text="@string/deportationHelpQuestion7"
                />
            <TextView
                android:id="@+id/seventhDeportationHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/seventhDeportationHelpQuestion"
                android:text="@string/deportationHelpAnswer7"
                />

            <Button
                android:id="@+id/eighthDeportationHelpQuestion"
                style="@style/answer_question_view"
                android:layout_below="@id/seventhDeportationHelpAnswer"
                android:text="@string/deportationHelpQuestion8"
                />
            <TextView
                android:id="@+id/eighthDeportationHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/eighthDeportationHelpQuestion"
                android:text="@string/deportationHelpAnswer8"
                />

            <Button
                android:id="@+id/ninthDeportationHelpQuestion"
                style="@style/answer_question_view"
                android:layout_below="@id/eighthDeportationHelpAnswer"
                android:text="@string/deportationHelpQuestion9"
                />
            <TextView
                android:id="@+id/ninthDeportationHelpAnswer"
                style="@style/answer_button_view"
                android:layout_below="@id/ninthDeportationHelpQuestion"
                android:text="@string/deportationHelpAnswer9"
                />

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/facebook_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/black"
            android:drawableLeft="@mipmap/fb_logo"
            android:drawableStart="@mipmap/fb_logo"
            />

        <!-- TO DO: Figure out how to display the copyright notice. Not a huge deal.
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/copyright_notice"
                        android:text="@string/copyright"
                        android:textSize="8sp"
                        android:textColor="#FFFFFF"
                        android:clickable="false"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/arrived_button"
                        /> -->

        <Button
            android:id="@+id/arrived_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/black"
            android:drawableLeft="@mipmap/arrived_footer_logo"
            android:drawableStart="@mipmap/arrived_footer_logo"
            />


        <Button
            android:id="@+id/twitter_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/black"
            android:drawableLeft="@mipmap/twitter_logo"
            android:drawableStart="@mipmap/twitter_logo"
            />
    </RelativeLayout>
</RelativeLayout>